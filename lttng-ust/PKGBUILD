pkgname=lttng-ust
pkgver=2.3.0
pkgrel=1
pkgdesc="Userspace tracing library for LTTng"
arch=('i686' 'x86_64')
url="http://lttng.org/"
license=('LGPL2.1' 'GPL2' 'MIT')
depends=('liburcu' 'util-linux')
optdepends=('babeltrace')
options=('!libtool')
install='lttng-ust.install'
source=("http://lttng.org/files/lttng-ust/lttng-ust-${pkgver}.tar.bz2")
sha512sums=('4706bee455e39130fe546cd832bea9e39ed23573c4a6d8c76fe0bd198af3ceb08f5929a27218577b736061a08698d034581a028543c02e7c82c60065787578cd')

build() {
  cd "${srcdir}/lttng-ust-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/lttng-ust-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
