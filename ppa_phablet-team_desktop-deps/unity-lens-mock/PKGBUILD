_ubuntu_ver=0.3~raring1

pkgname=unity-lens-mock
pkgver=${_ubuntu_ver/\~/.}
pkgrel=1
pkgdesc="Unity Lens driven by JSON files"
arch=('any')
url="https://launchpad.net/~phablet-team/+archive/desktop-deps/+packages"
license=('GPL')
groups=('unitynext')
depends=('libunity' 'python2')
makedepends=('python2-distutils-extra')
source=("https://launchpad.net/~phablet-team/+archive/desktop-deps/+files/unity-lens-mock_${_ubuntu_ver}.tar.gz")
sha512sums=('3a606ca172fb3756804c2c2af97d33cc386215b1d8fbe8fcd6e526dec95104cbab5bd1435c3e349955d43077a65c408398b6ebf7a5deada0292f872660a38987')

package() {
  cd "${srcdir}/${pkgname}-${_ubuntu_ver}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
}
