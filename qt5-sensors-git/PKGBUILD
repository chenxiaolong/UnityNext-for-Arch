# Maintainer: Xiao-Long Chen <chenxiaolong@cxl.epac.to>
# Original Maintainer: Sergio Correia <sergio.correia@uece.net>

pkgname=qt5-sensors-git
epoch=1
pkgver=515.0862901
pkgrel=1
pkgdesc="A cross-platform application and UI framework (QtSensors)"
groups=('unitynext')
arch=('i686' 'x86_64')
url="https://qt.gitorious.org/qt/qtsensors"
license=('LGPL')
depends=('qt5-base')
makedepends=('git')
options=('!libtool')
source=('qtsensors::git+git://gitorious.org/qt/qtsensors.git')
sha512sums=('SKIP')

pkgver() {
  cd qtsensors
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd "${srcdir}/qtsensors"
  qmake-qt5
  make
}

package() {
  cd "${srcdir}/qtsensors"
  make INSTALL_ROOT="${pkgdir}" install
}
